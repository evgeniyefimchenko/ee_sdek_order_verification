                        <type>selectbox</type>
                    </item>
                    <item id="INVALID">                      
                        <type>selectbox</type>
                    </item>
                </items>
            </section>
            <section id="statuses_order">
                <items>
					<item id="information_statuses_order">
					   <type>info</type>
					   <handler>fn_get_information_statuses_order</handler>
					</item>				
                    <item id="ORDER_ACCEPTED">                      
                        <type>selectbox</type>
					</item>
                    <item id="ORDER_CREATED">                      
